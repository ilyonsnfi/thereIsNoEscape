{
  "manifest_version": 3,
  "name": "Halo Esc Key Blocker",
  "version": "1.0",
  "description": "Prevents halopsa.com from capturing the Esc key",
  "content_scripts": [
    {
      "matches": ["*://*.halopsa.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Halo Esc Key Blocker"
  },
  "permissions": ["storage"]
}