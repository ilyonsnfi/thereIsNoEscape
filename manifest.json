{
  "manifest_version": 3,
  "name": "Halo Esc Key Blocker",
  "version": "0.1",
  "description": "Prevents halopsa.com capturing the Esc key",
  "content_scripts": [
    {
      "matches": ["*://*.halopsa.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Halo Esc Key Blocker"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage"]
}
